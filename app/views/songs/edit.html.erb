<%= form_for @song do |f|%>
  <h1>Update A Song</h1>
  <% if @song.errors.any?%>
    <h2>Errors</h2>
    <ul>
      <% @song.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <%end%>
  <%= f.label 'Name of the song'%></br>
  <%= f.text_field :title%></br>
  
  <%= f.label 'Was it ever released?'%></br>
  <%= f.check_box :released%></br>
  
  <%= f.label 'Release Year?'%></br>
  <%= f.text_field :release_year%></br>

  <%= f.label "Artist's name?"%></br>
  <%= f.text_field :artist_name%></br>

  <%= f.label 'Genre?'%></br>
  <%= f.text_field :genre%></br>

  <%= f.submit%>
<%end%>